# include <stdio.h>
void main()
{
int a[10],n,pos,i;
printf("Enter the size of the array:\n");
scanf("%d",&n);
printf("Enter the position to be deleted:\n");
scanf("%d",&pos);
printf("Enter the array elements:\n");
for(i=0;i<n;i++)
    scanf("%d",&a[i]);
for(i=pos;i<=n;i++)
    a[i]=a[i+1];
n--;
printf("\nNew Array:\n");
for(i=0;i<n;i++)
    printf("%d \n",a[i]);
}


